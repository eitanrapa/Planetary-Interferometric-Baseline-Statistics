# naming seed
pibs.ext.stem := pibs
# its location
pibs.ext.root := ext/

# these are bindings for
pibs.ext.wraps := pibs.lib
# built with pybind11
pibs.ext.capsule :=
# dependencies on external packages
pibs.ext.extern := pibs.lib pyre pybind11 python gsl
# compiler control
pibs.ext.lib.c++.flags += $($(compiler.c++).std.c++20)


# end of file
